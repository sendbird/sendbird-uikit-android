<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/sb_size_12"
    android:paddingEnd="@dimen/sb_size_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sendbird.uikit.internal.ui.messages.NewLineView
        android:id="@+id/newLineView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/sb_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivProfileView"
        android:layout_width="@dimen/sb_size_26"
        android:layout_height="@dimen/sb_size_26"
        android:scaleType="centerCrop"
        android:contentDescription="@string/sb_sender_profile_description"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/brBottom"
        app:layout_constraintEnd_toStartOf="@id/contentPanelWithReactions"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sb_size_50"
        android:paddingEnd="@dimen/sb_size_50"
        android:paddingBottom="@dimen/sb_size_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLineView"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/contentTopBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvNickname, quoteReplyPanel" />

    <com.sendbird.uikit.internal.ui.messages.OtherQuotedMessageView
        android:id="@+id/quoteReplyPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sb_size_12"
        android:translationY="@dimen/sb_size_10"
        app:layout_constraintStart_toEndOf="@+id/ivProfileView"
        app:layout_constraintTop_toBottomOf="@+id/newLineView"
        app:layout_constraintBottom_toTopOf="@+id/contentPanelWithReactions"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentPanelWithReactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/sb_message_max_width"
        android:layout_marginStart="@dimen/sb_size_12"
        android:layout_marginEnd="@dimen/sb_size_4"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@id/brBottom"
        app:layout_constraintEnd_toStartOf="@id/tvSentAt"
        app:layout_constraintStart_toEndOf="@id/ivProfileView"
        app:layout_constraintTop_toBottomOf="@id/contentTopBarrier" >

        <View
            android:id="@+id/emojiReactionListBackground"
            android:layout_width="@dimen/sb_size_0"
            android:layout_height="@dimen/sb_size_0"
            app:layout_constraintTop_toTopOf="@id/rvEmojiReactionList"
            app:layout_constraintBottom_toBottomOf="@id/rvEmojiReactionList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/sb_size_7"
            android:paddingBottom="@dimen/sb_size_7"
            android:paddingStart="@dimen/sb_size_12"
            android:paddingEnd="@dimen/sb_size_12"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/contentBarrier"
            app:layout_constraintBottom_toTopOf="@id/rvEmojiReactionList" >

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/sb_size_28"
                android:layout_height="@dimen/sb_size_28"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/sb_size_8"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvFileName"
                android:maxWidth="@dimen/sb_file_name_max_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="middle"
                />

        </LinearLayout>

        <com.sendbird.uikit.internal.ui.reactions.EmojiReactionListView
            android:id="@+id/rvEmojiReactionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/sb_size_7"
            android:paddingEnd="@dimen/sb_size_7"
            android:paddingBottom="@dimen/sb_size_7"
            android:paddingTop="@dimen/sb_size_7"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/contentPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/contentBarrier"
            app:layout_constraintBottom_toBottomOf="parent" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/contentBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="contentPanel,rvEmojiReactionList"
            app:barrierDirection="end" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSentAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/brBottom"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/contentPanelWithReactions"
        android:layout_marginEnd="@dimen/sb_size_0"
        android:layout_marginStart="@dimen/sb_size_4" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/brBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivProfileView,contentPanelWithReactions,tvSentAt" />

    <com.sendbird.uikit.internal.ui.messages.ThreadInfoView
        android:id="@+id/threadInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/contentPanelWithReactions"
        app:layout_constraintTop_toBottomOf="@id/contentPanelWithReactions"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
